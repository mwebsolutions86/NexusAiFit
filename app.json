{
  "expo": {
    "name": "NexusAiFit",
    "slug": "nexusaifit",
    "scheme": "nexusaifit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000",
      "newArchEnabled": true
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mohcinemz86.nexusaifit",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Nécessaire pour la mesure du rythme cardiaque via le capteur photo.",
        "NSMicrophoneUsageDescription": "Utilisé pour l'analyse sonore de votre environnement d'entraînement."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.mohcinemz86.nexusaifit",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-localization", 
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "supportsRTL": true, 
      "router": {},
      "eas": {
        "projectId": "6060e704-1a60-4363-a8c2-5115458fa582"
      }
    }
  }
}